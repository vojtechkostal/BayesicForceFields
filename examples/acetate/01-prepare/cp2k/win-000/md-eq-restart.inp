&GLOBAL
  PROJECT_NAME ace
  PRINT_LEVEL LOW
  RUN_TYPE MD
  WALLTIME 03:50:00
&END GLOBAL
&MOTION
  &MD
    TEMPERATURE 300.0
    TIMESTEP [fs] 0.5
    STEPS 500
    ENSEMBLE LANGEVIN
    &LANGEVIN
      GAMMA 0.02
    &END LANGEVIN
  &END MD
  &PRINT
    &FORCES
      FORMAT DCD
      &EACH
        MD 1
      &END EACH
    &END FORCES
    &TRAJECTORY
      FORMAT DCD
      &EACH
        MD 1
      &END EACH
    &END TRAJECTORY
    &RESTART
      BACKUP_COPIES 1
      &EACH
        MD 1
      &END EACH
    &END RESTART
  &END PRINT
&END MOTION
&FORCE_EVAL
  METHOD Quickstep
  &SUBSYS
    &TOPOLOGY
      COORD_FILE_NAME pos.xyz
      COORD_FILE_FORMAT XYZ
    &END TOPOLOGY
    &CELL
      ABC [angstrom] 15.7107 15.7107 15.7107
      PERIODIC XYZ
    &END CELL
    &KIND C
      BASIS_SET TZV2P-GTH-q4
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND H
      BASIS_SET TZV2P-GTH-q1
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND O
      BASIS_SET TZV2P-GTH-q6
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
  &DFT
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    BASIS_SET_FILE_NAME BASIS_MOLOPT_UZH
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &SCF
      MAX_SCF 20
      EPS_SCF 5e-07
      &OUTER_SCF
        MAX_SCF 20
        EPS_SCF 5e-07
      &END OUTER_SCF
      &OT
        PRECONDITIONER FULL_ALL
        ENERGY_GAP -1.0
        MINIMIZER DIIS
      &END OT
      SCF_GUESS RESTART
    &END SCF
    &MGRID
      CUTOFF [Ry] 400.0
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1e-12
      EXTRAPOLATION_ORDER 4
      EXTRAPOLATION ASPC
    &END QS
    &XC
      &XC_FUNCTIONAL
        &PBE
          PARAMETRIZATION REVPBE
        &END PBE
      &END XC_FUNCTIONAL
      &XC_GRID
        XC_DERIV NN50_SMOOTH
      &END XC_GRID
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          R_CUTOFF [angstrom] 16.0
          REFERENCE_FUNCTIONAL revPBE
          PARAMETER_FILE_NAME dftd3.dat
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
    CHARGE -1
    MULTIPLICITY 1
    UKS .FALSE.
    WFN_RESTART_FILE_NAME ace-RESTART.wfn
  &END DFT
&END FORCE_EVAL
&EXT_RESTART
  RESTART_FILE_NAME ace-1.restart
&END EXT_RESTART
